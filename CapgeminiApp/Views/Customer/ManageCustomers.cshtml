@model List<CustomerModel>
@{
    ViewData["Title"] = "ManageCustomers";
}
<script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
<script>
    function updateCustomer() {
        var id = jQuery("#select option:selected").val();
        window.location.href = "/Customer/Update/" + id;
    }

    function removeCustomer() {
        var id = jQuery("#select option:selected").val();
        window.location.href = "/Customer/Remove/" + id;
    }
</script>
<h2>ManageCustomers</h2>
<div class="container" id="manageCustomers" style="margin: 5px">
    <label>Create new customer:</label>
    @Html.ActionLink("Create", "Create", "Customer", htmlAttributes: new { @class = "btn btn-default" })<br>
    @if (Model != null && Model.Any())
    {
        <label>Select the customer to update or remove:</label>
        <select class="form-control" id="select" style="display: inline; width: 270px">
            @foreach (var customer in Model)
            {
                <option value="@customer.ID">@customer.Name @customer.Surname</option>
            }
        </select>
        <button class="btn btn-default" onclick="updateCustomer()">Update</button>
        <button class="btn btn-default" onclick="removeCustomer()">Remove</button>
    }
</div>

@if (Model != null && Model.Any())
{
    <table class="table table-striped" style="padding: 1px">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Surname</th>
            <th>TelephoneNumber</th>
            <th>Address</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.TelephoneNumber</td>
                <td>@item.Address</td>
            </tr>
        }
    </table>
}

